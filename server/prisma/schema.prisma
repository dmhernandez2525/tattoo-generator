// Ink Synthesis Database Schema
// PostgreSQL database for tattoo design storage and user management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User accounts for saving designs and preferences
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  designs Design[]

  @@map("users")
}

// Generated tattoo designs
model Design {
  id          String   @id @default(cuid())
  prompt      String
  style       String
  imageUrl    String?
  thumbnailUrl String?
  status      DesignStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("designs")
}

enum DesignStatus {
  PENDING
  GENERATING
  COMPLETED
  FAILED
}
