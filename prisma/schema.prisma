generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ARTIST
  ADMIN
}

enum TattooStyle {
  CYBERPUNK
  TRADITIONAL
  MINIMALIST
  GEOMETRIC
  WATERCOLOR
  TRIBAL
  JAPANESE
}

enum CommissionStatus {
  OPEN
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELED
}

model User {
  id                   String       @id @default(uuid()) @db.Uuid
  clerkId              String       @unique
  email                String       @unique
  displayName          String
  role                 UserRole     @default(USER)
  avatarUrl            String?
  onboardingCompleted  Boolean      @default(false)
  designs              Design[]
  collections          Collection[]
  commissionsRequested Commission[] @relation("CommissionRequester")
  commissionsAssigned  Commission[] @relation("CommissionArtist")
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

model Design {
  id           String           @id @default(uuid()) @db.Uuid
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String           @db.Uuid
  title        String
  prompt       String
  style        TattooStyle
  imageUrl     String
  thumbnailUrl String?
  isFavorite   Boolean          @default(false)
  collections  CollectionItem[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@index([userId])
}

model StylePreset {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String
  keywords    String[]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Collection {
  id          String           @id @default(uuid()) @db.Uuid
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String           @db.Uuid
  name        String
  description String?
  items       CollectionItem[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

model CollectionItem {
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String     @db.Uuid
  design       Design     @relation(fields: [designId], references: [id], onDelete: Cascade)
  designId     String     @db.Uuid
  createdAt    DateTime   @default(now())

  @@id([collectionId, designId])
  @@index([collectionId])
  @@index([designId])
}

model Commission {
  id          String           @id @default(uuid()) @db.Uuid
  requester   User             @relation("CommissionRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId String           @db.Uuid
  artist      User?            @relation("CommissionArtist", fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?          @db.Uuid
  status      CommissionStatus @default(OPEN)
  brief       String
  budgetCents Int
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([requesterId])
  @@index([artistId])
}
